{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "node",
    "options": {
        "cwd": "${workspaceRoot}"
            
    },
    "isShellCommand": true,
    
   "args": ["./watcher.js"],
    "showOutput": "always",
     "isWatching": true,
    "problemMatcher": {
            "fileLocation": "absolute",
            "owner": "ocaml",
            "pattern": [{
                "regexp": "^File \"(.*)\", line (\\d+)(?:, characters (\\d+)-(\\d+))?:$",
                "file": 1,
                "line": 2,
                "column": 3,
                "endColumn": 4
            }, {
                "regexp": "^(?:(?:Parse\\s+)?(Warning|[Ee]rror)(?:\\s+\\d+)?:)?\\s+(.*)$",
                "severity": 1,
                "message": 2,
                "loop": true
            }]
        }

}